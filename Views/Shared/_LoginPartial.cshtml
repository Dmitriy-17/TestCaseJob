@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
    <li style="text-align:right">@Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Home")</li>
    <li style="text-align:right; margin-right:25%">@Html.ActionLink("Выйти", "Logout", "Account")</li>
}
else
{   
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li li style="text-align:right; margin-right:28%">@Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>   
}


