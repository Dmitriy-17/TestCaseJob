@model List<TestCaseJob.Models.Employee>
@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<table>
    <tr>
        <td>
            @Html.DisplayNameFor(model => Model[0].FirstName)
    </td>
        <td>
            @Html.DisplayNameFor(model => Model[0].Name)
        </td>
        <td>
            @Html.DisplayNameFor(model => Model[0].LastName)
        </td>
        <td>
            @Html.DisplayNameFor(model => Model[0].Age)
        </td>
        <td>
           Руководитель
        </td>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.Name</td>
            <td>@employee.LastName</td>
            <td>@employee.Age</td>
                    
                @if(employee.Leader != null)
                {
                <td>@employee.Leader.FirstName</td>
                }
                else
                {
                    <td></td>
                }            
            <td>@Html.ActionLink("Редактировать", "Edit", "Employee", new { id = employee.Id }, null)</td>
            <td>@Html.ActionLink("Удалить", "Delete", "Employee", new { id = employee.Id }, null)</td>
        </tr>
    }
</table>

